#!/usr/bin/with-contenv bash

#Â copy env file and run keygen if not present
if [ ! -f /usr/share/webapps/argus/.env ]; then
cp /defaults/env /usr/share/webapps/argus/.env
cd /usr/share/webapps/argus || exit
php artisan key:generate
fi

# permissions
chown -R abc:abc \
	/usr/share/webapps/argus/storage \
	/usr/share/webapps/argus/bootstrap

chmod -R 0777 \
	/usr/share/webapps/argus/storage \
	/usr/share/webapps/argus/bootstrap
